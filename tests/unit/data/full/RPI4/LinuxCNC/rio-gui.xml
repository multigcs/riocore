<pyvcp>
  <tabs>
    <names>['Status', 'Inputs', 'Outputs']</names>
    <vbox>
      <labelframe text="MDI-Commands">
        <relief>GROOVE</relief>
        <font>("Helvetica", 10)</font>
        <vbox>
          <labelframe text="Zero">
            <relief>GROOVE</relief>
            <font>("Helvetica", 10)</font>
            <hbox>
              <boxexpand expand="yes"/>
              <boxfill fill="both"/>
              <boxanchor anchor="e"/>
              <button>
                <relief>GROOVE</relief>
                <bd>3</bd>
                <halpin>"halui.mdi-command-00"</halpin>
                <text>"X"</text>
                <font>("Helvetica", 12)</font>
              </button>
              <button>
                <relief>GROOVE</relief>
                <bd>3</bd>
                <halpin>"halui.mdi-command-01"</halpin>
                <text>"Y"</text>
                <font>("Helvetica", 12)</font>
              </button>
              <button>
                <relief>GROOVE</relief>
                <bd>3</bd>
                <halpin>"halui.mdi-command-02"</halpin>
                <text>"Z"</text>
                <font>("Helvetica", 12)</font>
              </button>
            </hbox>
          </labelframe>
          <labelframe text="Touch">
            <relief>GROOVE</relief>
            <font>("Helvetica", 10)</font>
            <hbox>
              <boxexpand expand="yes"/>
              <boxfill fill="both"/>
              <boxanchor anchor="e"/>
              <button>
                <relief>GROOVE</relief>
                <bd>3</bd>
                <halpin>"halui.mdi-command-03"</halpin>
                <text>"Touch-Z"</text>
                <font>("Helvetica", 12)</font>
              </button>
              <hbox>
                <boxexpand expand="yes"/>
                <boxfill fill="both"/>
                <boxanchor anchor="e"/>
                <led>
                  <halpin>"probe-input"</halpin>
                  <size>16</size>
                  <on_color>"yellow"</on_color>
                  <off_color>"red"</off_color>
                  <anchor>"e"</anchor>
                  <width>16</width>
                </led>
              </hbox>
            </hbox>
          </labelframe>
        </vbox>
      </labelframe>
    </vbox>
