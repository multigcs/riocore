{
    "name": "Spartan6",
    "description": "Spartan6 - https://github.com/ozzyrob/Linuxcnc-FPGA/",
    "boardcfg": "Spartan6",
    "machinetype": "mill",
    "protocol": "SPI",
    "slots": [
        {
            "name": "BOB_A",
            "comment": "DB3 connector (v04)",
            "pins": {
                "P1": {"pin":  "p27"},
                "P2": {"pin":  "p24"},
                "P3": {"pin":  "p22"},
                "P4": {"pin":  "p17"},
                "P5": {"pin":  "p30"},
                "P6": {"pin":  "p29"},
                "P7": {"pin":  "p33"},
                "P8": {"pin":  "p32"},
                "P9": {"pin":  "p35"},
                "P10": {"pin":  "p34"},
                "P11": {"pin":  "p41"},
                "P12": {"pin":  "p40"},
                "P13": {"pin":  "p43"},
                "P14": {"pin":  "p26"},
                "P15": {"pin":  "p23"},
                "P16": {"pin":  "p21"},
                "P17": {"pin":  "p16"}
            }
        }
    ],
    "plugins": [
        {
            "type": "spi",
            "pins": {
                "mosi": {
                    "pin": "p83"
                },
                "miso": {
                    "pin": "p82"
                },
                "sclk": {
                    "pin": "p84"
                },
                "sel": {
                    "pin": "p81"
                }
            }
        },
        {
            "type": "blink",
            "pins": {
                "led": {
                    "pin": "LED:LED1",
                    "modifier": [
                        {
                            "type": "onerror"
                        }
                    ]
                }
            },
            "frequency": 1.0
        },
        {
            "type": "blink",
            "pins": {
                "led": {
                    "pin": "LED:LED2",
                    "modifier": [
                        {
                            "type": "onerror"
                        }
                    ]
                }
            },
            "frequency": 5.0
        },
        {
            "type": "stepdir",
            "name": "Joint0",
            "pins": {
                "step": {
                    "pin": "BOB_A:P2"
                },
                "dir": {
                    "pin": "BOB_A:P3"
                }
            },
            "is_joint": true
        },
        {
            "type": "stepdir",
            "name": "Joint1",
            "pins": {
                "step": {
                    "pin": "BOB_A:P4"
                },
                "dir": {
                    "pin": "BOB_A:P5"
                }
            },
            "is_joint": true
        },
        {
            "type": "stepdir",
            "name": "Joint2",
            "pins": {
                "step": {
                    "pin": "BOB_A:P6"
                },
                "dir": {
                    "pin": "BOB_A:P7"
                }
            },
            "is_joint": true
        },
        {
            "type": "pwmout",
            "name": "PWM",
            "min": 0,
            "max": 10000,
            "pins": {
                "pwm": {
                    "pin": "BOB_A:P1"
                }
            }
        },
        {
            "type": "bitout",
            "name": "led00",
            "pins": {
                "bit": {
                    "pin": "p79"
                }
            }
        },
        {
            "type": "bitout",
            "name": "led01",
            "pins": {
                "bit": {
                    "pin": "p80"
                }
            }
        },
        {
            "type": "bitout",
            "name": "led02",
            "pins": {
                "bit": {
                    "pin": "p74"
                }
            }
        },
        {
            "type": "bitout",
            "name": "led03",
            "pins": {
                "bit": {
                    "pin": "p78"
                }
            }
        }
    ]
}
